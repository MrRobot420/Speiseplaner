<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mobilieapplikationen.speiseplan.mealdetail.MealdetailActivity"
    tools:showIn="@layout/activity_mealdetail">

    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="148dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="29dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/mensa_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="29dp"
                android:paddingBottom="4dp"
                android:text="mensa"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/date_detail"
                android:paddingBottom="4dp"
                android:text="name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/type_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="85dp"
                android:paddingBottom="4dp"
                android:text="type"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="42dp"
                android:layout_toStartOf="@+id/price_detail"
                android:paddingBottom="4dp"
                android:text="date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/price_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/price_bed_detail"
                android:layout_centerHorizontal="true"
                android:paddingBottom="4dp"
                android:text="price"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/price_bed_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="28dp"
                android:layout_marginEnd="74dp"
                android:paddingBottom="4dp"
                android:text="price_bed"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/price_guest_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/price_bed_detail"
                android:text="price_g"
                android:textSize="16sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
